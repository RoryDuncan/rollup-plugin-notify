{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "noEmit": true,
    "declaration": true,
    "extendedDiagnostics": true,
    "incremental": true,
    "importHelpers": true,
    "module": "system",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "outDir": "resources/typings/",
    "target": "ES2018",
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "lib": ["ES2020"],
    "types": ["node"]
  },
  "exclude": ["example/"],
  "typeAcquisition": {
    "enable": true
  },
  "compileOnSave": true
}
